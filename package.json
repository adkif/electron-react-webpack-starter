{
	"name": "blog",
	"version": "0.1.0",
	"main": "build/main.js",
	"license": "MIT",
	"scripts": {
		"prepare:webpack": "cross-env TS_NODE_PROJECT=\"webpack.tsconfig.json\" webpack",
		"build": "yarn prepare:webpack --config webpack/webpack.prod.ts",
		"build:dev": "yarn prepare:webpack --config webpack/webpack.dev.ts",
		"prestart:dev": "yarn build:dev",
		"start:dev": "webpack serve --config webpack/webpack.dev.ts",
		"start:main": "electron .",
		"format": "prettier --config .prettierrc 'app/**/*.*' --write",
		"prettier-watch": "onchange 'app/**/*.*' -- prettier --write {{changed}}",
		"lint": "eslint . --ext .ts"
	},
	"devDependencies": {
		"@popperjs/core": "^2.11.7",
		"@swc/core": "^1.3.56",
		"@swc/css": "^0.0.20",
		"@types/electron": "^1.6.10",
		"@types/node": "^18.16.3",
		"@types/react": "^18.2.0",
		"@types/react-dom": "^18.2.1",
		"@types/webpack": "^5.28.1",
		"@types/webpack-dev-server": "^4.7.2",
		"@typescript-eslint/eslint-plugin": "^5.59.2",
		"@typescript-eslint/parser": "^5.59.2",
		"autoprefixer": "^10.4.14",
		"bootstrap": "^5.2.3",
		"cross-env": "^7.0.3",
		"css-loader": "^6.7.3",
		"css-minimizer-webpack-plugin": "^5.0.0",
		"electron-react-devtools": "^0.5.3",
		"eslint": "^8.39.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-import": "^2.25.3",
		"eslint-plugin-jsx-a11y": "^6.5.1",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-react": "^7.28.0",
		"eslint-plugin-react-hooks": "^4.3.0",
		"eslint-webpack-plugin": "^4.0.1",
		"fork-ts-checker-webpack-plugin": "^8.0.0",
		"html-webpack-plugin": "^5.5.1",
		"husky": "^8.0.3",
		"mini-css-extract-plugin": "^2.7.5",
		"onchange": "^7.1.0",
		"postcss-loader": "^7.3.0",
		"prettier": "^2.8.8",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-refresh": "^0.14.0",
		"react-router-dom": "^6.11.0",
		"sass": "^1.62.1",
		"sass-loader": "^13.2.2",
		"style-loader": "^3.3.2",
		"terser-webpack-plugin": "^5.3.7",
		"ts-loader": "^9.4.2",
		"ts-node": "^10.9.1",
		"tsconfig-paths": "^4.2.0",
		"tsconfig-paths-webpack-plugin": "^4.0.1",
		"typescript": "^5.0.4",
		"webpack-cli": "^5.0.2",
		"webpack-dev-server": "^4.13.3",
		"webpack-merge": "^5.8.0"
	},
	"description": "React + Webpack + Electron + Typescript",
	"dependencies": {
		"electron": "^24.1.3",
		"webpack": "^5.81.0"
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn format && yarn lint"
		}
	}
}
